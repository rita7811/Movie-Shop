
@model ApplicationCore.Models.CastDetailsModel

@{
    ViewData["Title"] = "Cast Details Page";
}


<div class="container-fluid">
    <!--1st row -->
    <div class="row">
        <!--1st column -->
        <div class="col-5 text-center">
            <img src="@Model.ProfilePath" class="img-fluid" alt="@Model.Name" width="200" height="400" />
        </div>

        <!--2nd column -->
        <div class="col-7">
            <div class="card-body">
                <h2 class="card-title">@Model.Name</h2>
                <a href="@Model.TmdbUrl" class="text-decoration-none" target="_blank">TMDB People Page</a>
            </div>
        </div>
    </div>

    <!--2nd row -->
    <div class="row">
        <h1 class="card-title">
            Films
        </h1>
    </div>

    <hr />

    <!--3rd row -->
    <div class="row">
        @foreach (var movie in Model.Movies)
        {
            <div class="col-xl-2 col-lg-3 col-sm-4 col-6">

                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="text-decoration-none">
                    <div class="card mb-4 shadow">
                        <img src="@movie.PosterUrl" class="img-fluid" alt="@movie.Title" />
                    </div>
                </a>
                    
            </div>

            }

     </div>

</div>


